{
	"name": "adon-email",
	"version": "1.0.0",
	"license": "MIT",
	"author": "Martin PARENT <mparent@adon-immo.com> (https://adon-immo.com)",
	"description": "A simple minified and inlined HTML email builder from pug template and stylus sheet.",
	"keywords": [
		"simple",
		"email",
		"minify",
		"inline",
		"html",
		"css",
		"template",
		"pug",
		"stylus"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/MartyDisco/adon-email.git"
	},
	"scripts": {
		"prebuild": "cpx node_modules/foundation-emails/dist/foundation-emails.css src",
		"build": "stylus src/index.styl --include-css -o src/index.css",
		"postbuild": "node build.js",
		"lint": "eslint . --ext js, mjs, vue || true"
	},
	"dependencies": {
		"cpx": "^1.5.0",
		"foundation-emails": "^2.2.1",
		"html-minifier": "^3.5.15",
		"juice": "^4.2.3",
		"pug": "^2.0.3",
		"stylus": "^0.54.5"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-2": "^6.24.1",
		"eslint": "^4.18.1",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-import": "^2.9.0",
		"eslint-plugin-node": "^6.0.1",
		"eslint-plugin-pug": "^1.1.1"
	}
}
